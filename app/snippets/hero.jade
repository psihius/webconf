section#hero.hero.js-section
	<? $hero = $site->find("hero") ?>
	<? if($hero->hasImages()): ?>
	.slideshow
		<? foreach($hero->images() as $image): ?>
		.slideshow__item(style!="background-image: url(<?= thumb($image, array('width' => 1920, 'height' => 1080))->url(); ?>)")
		<? endforeach ?>
	<? endif ?>
	.wrapper.hero__wrapper
		.hero__pretitle
			date.hero__date <?= $site->conf_date() ?>
			|, 
			span.hero__place <?= $site->conf_place() ?>
		h1.hero__title <?= $site->title() ?>
		img(src="assets/images/logo.svg").hero__logo
		h2.hero__subtitle <?= $data->subtitle() ?>
		.hero__buttons.buttons
			a(href="#about").buttons__item.button--ghost_main.js-scrollTo <?= l::get("learn more") ?>
			a(href="#tickets").buttons__item--ru-ext.button--ghost_accent.js-scrollTo <?= l::get("buy_ticket") ?>
		.hero__foot
			a(href="#about").hero__down.js-scrollTo
				svg: use(xlink:href="#icon-arrow-double-down")
