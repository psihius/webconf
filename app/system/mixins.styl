font-face($name, $file, $style, $weight)
	@font-face
		font-family $name
		font-style $style
		font-weight $weight
		src url($fontpath/$file.woff2) format('woff2'),
			url($fontpath/$file.woff) format('woff')

clearfix()
	&:before
	&:after
		content: ""
		display: table
	&:after
		clear: both
		zoom: 1 if support-for-ie

font(f)
	for prop, val in f
		if prop == "family"
			font-{prop}: val, $font-sans
		else
			font-{prop}: val

// check if position direction is set and is not auto
dir(d)
	return d != false && d != auto

position(pos, top = false, right = false, bottom = false, left = false)
	if(pos == "abscenter")
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
	else
		position pos
		top top if dir(top)
		right right if dir(right)
		bottom bottom if dir(bottom)
		left left if dir(left)

fadeOut(duration = .5s)
	opacity 0
	visibility hidden
	transition: opacity duration ease 0s, visibility 0s linear duration

fadeIn(duration = .5s)
	opacity 1
	visibility visible
	transition: all duration ease 0s
