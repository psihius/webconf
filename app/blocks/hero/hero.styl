.hero
	text-align center
	color: $color.white
	min-height 100%
	padding 0 12px 1%
	position relative
	display flex
	@media(min-width: $screens.pv.bp)
		padding-left 24px
		padding-right 24px
	&__wrapper
		display flex
		align-content center
		flex-direction column
		@media(max-width: $screens.tv.bp - 1)
			margin 0 auto
	&__pretitle
		font-size 18px
		line-height 1.3
		font($font.body.light)
		margin 64px 0 24px
		@media(min-width: $screens.pv.bp) and (max-width: $screens.ph.bp - 1)
			font-size 20px
			line-height 1.5
			margin 64px 0 48px
			@media(orientation: landscape)
				margin 48px 0 8px
				font-size 16px
		@media(min-width: $screens.ph.bp) and (max-width: $screens.tv.bp - 1)
			@media(orientation: landscape)
				margin 64px 0 24px
				font-size 18px
		@media(min-width: $screens.tv.bp)
			font-size 24px
			line-height 1.5
			margin 64px 0 96px
		&::before, &::after
			content ""
			display block
			vertical-align middle
			width 32px
			margin 12px auto 8px
			@media(min-width: $screens.pv.bp)
				display inline-block
				width 32px
				margin 0 8px
			@media(min-width: $screens.tv.bp)
				width 64px
				margin 0 16px
			height 2px
			background rgba(255,255,255,.5)
	&__date
		//
	&__place
		font($font.body.regular)
		display block
		@media(min-width: $screens.pv.bp)
			display inline
	&__title
		overflow hidden
		height 0
	&__logo
		margin 0 auto
		height 64px
		@media(min-width: $screens.pv.bp) and (max-width: $screens.ph.bp - 1)
			height 100px
			@media(orientation: landscape)
				height 48px
		@media(min-width: $screens.ph.bp) and (max-width: $screens.tv.bp - 1)
			@media(orientation: landscape)
				height 72px
		@media(min-width: $screens.tv.bp)
			height 160px
	&__subtitle
		font($font.body.regular)
		line-height 1.1
		margin 18px auto 0
		font-size 18px
		width 85%
		[lang="ru"] &
			font-size 16px
		@media(min-width: $screens.pv.bp) and (max-width: $screens.ph.bp - 1)
			font-size 28px
			width 75%
			@media(orientation: landscape)
				margin-top 12px
				&, [lang="ru"] &
					font-size 16px
		@media(min-width: $screens.ph.bp) and (max-width: $screens.tv.bp - 1)
			@media(orientation: landscape)
				margin-top 18px
				&, [lang="ru"] &
					font-size 18px
		@media(min-width: $screens.tv.bp)
			line-height 1.3
			&, [lang="ru"] &
				font-size 32px
	&__buttons
		margin-top 24px
		margin-bottom @margin-top
		font-size 16px
		@media(min-width: $screens.pv.bp) and (max-width: $screens.ph.bp - 1)
			margin-top 48px
			@media(orientation: landscape)
				margin-top 12px
		@media(min-width: $screens.tv.bp)
			font-size 24px
			margin-top 64px
	&__foot
		text-align center
		@media(min-width: $screens.tv.bp)
			display block
	&__down
		margin-top 24px
		@media(min-width: $screens.tv.bp)
			margin-top 96px
		width 48px
		height: @width
		padding 12px
		display inline-block
		border-radius 50%
		fill: $color.white
		position relative
		transition all .3s ease
		&:hover
			background: $color.white
			fill: $color.black
		svg
			width 100%
			height @width
			animation bubble 2s -.3s infinite;
			position relative
