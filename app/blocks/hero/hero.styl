.hero
	text-align center
	color: $color.white
	min-height 100%
	display flex
	padding 0 12px 1%
	@media(min-width: $screens.pv.bp)
		padding-left 24px
		padding-right 24px
	&__wrapper
		align-content center
	&__pretitle
		font-size 18px
		line-height 1.3
		font($font.body.light)
		margin 64px 0 24px
		@media(min-width: $screens.pv.bp)
			font-size 20px
			line-height 1.5
			margin 64px 0 48px
		@media(min-width: $screens.tv.bp)
			font-size 24px
			margin 64px 0 96px
		&::before, &::after
			content ""
			display block
			vertical-align middle
			width 32px
			margin 12px auto 8px
			@media(min-width: $screens.pv.bp)
				display inline-block
				width 32px
				margin 0 16px
			@media(min-width: $screens.tv.bp)
				width 64px
			height 2px
			background rgba(255,255,255,.5)
	&__date
		//
	&__place
		font($font.body.regular)
		display block
		@media(min-width: $screens.pv.bp)
			display inline
	&__title
		overflow hidden
		height 0
	&__logo
		height 64px
		@media(min-width: $screens.pv.bp)
			height 100px
		@media(min-width: $screens.tv.bp)
			height 160px
		margin auto
	&__subtitle
		font($font.body.regular)
		font-size 18px
		line-height 1.1
		margin-top 18px
		@media(min-width: $screens.pv.bp)
			font-size 28px
		@media(min-width: $screens.tv.bp)
			font-size 32px
	&__buttons
		margin-top 24px
		font-size 16px
		@media(min-width: $screens.pv.bp)
			margin-top 48px
		@media(min-width: $screens.tv.bp)
			font-size 24px
			margin-top 64px
	&__foot
		text-align center
	&__down
		margin-top 24px
		@media(min-width: $screens.tv.bp)
			margin-top 96px
		width 48px
		height: @width
		padding 12px
		display inline-block
		border-radius 50%
		fill: $color.white
		// border: 1px solid alpha(@fill, .5)
		position relative
		// animation pulse-border 2s infinite;
		// transition all .3s
		&:hover
			background: $color.white
			fill: $color.black
		svg
			width 100%
			height @width
			animation bubble 2s -.3s infinite;
			position relative
