.schedule
	&__caption
		font-size 32px
		line-height 48px
		font($font.body.light)
		padding-bottom 20px
	&__desc
		font-size 14px
		line-height 18px
		margin 6px 0
		display block
		color: lighten($color.black, 50%)
	&__desc--accented
		font-size 16px
		line-height 20px
		color: lighten($color.black, 30%)
		p
			margin 0
			& + p
				margin 1em 0 0
	&__time
		text-align right
		letter-spacing 1px
		font($font.body.light)
		color: lighten($color.black, 30%)
		font-size 18px
		@media(min-width: $screens.ph.bp)
			font-size 24px
	&__link
		display block
		&:hover
			color: $color.accent
	&__action
		line-height 18px
		@media(min-width: $screens.ph.bp)
			line-height 28px
	&__speaker
		color: lighten($color.black, 50%)
	&__speach
		display block
		margin-bottom 6px
		font($font.body.semibold)
		font-size 18px
		@media(min-width: $screens.ph.bp)
			font-size 24px
	&__status--past
		opacity .8
		.schedule__desc
			display none
		color: lighten($color.black, 40%)
	&__status--present
		background-color: lighten($color.gold, 90%)
		.t-body__td--time
			position relative
			border-left: 3px solid $color.gold
			&::after
				position absolute 50% auto auto 0
				content ""
				transform translateY(-50%)
				border 8px solid transparent
				border-width 8px 0 8px 8px
				border-left-color: $color.gold
