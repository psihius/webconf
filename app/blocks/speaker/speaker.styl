.speaker
	&__photo
		margin 0 auto 20px
		width 128px
		height 128px
		overflow hidden
		border-radius 50%
		position relative
		img
			position abscenter
	&__photo--blank
		@extend .speaker__photo
		background-color: lighten($color.black, 10%)
		fill: lighten($color.black, 20%)
		svg
			width 50%
			height 50%
			position abscenter
	&__profile
		height 40px
		border-bottom: 1px dotted lighten($color.black, 20%)
	&__fullname
		font($font.body.semibold)
		color: $color.accent
		font-size 18px
		@media(min-width: $screens.tv.bp)
			font-size 24px
	&__social
		//
	&__bio
		text-align left
		font($font.body.light)
		line-height 1.5
		color: darken($color.white, 40%)
		font-size 14px
		@media(min-width: $screens.tv.bp)
			font-size 16px
		p
			margin 12px 0
	&__speach
		margin-top 24px
	&__speach_title
		font-size 14px
		display inline-block
		font($font.body.light)
		text-transform uppercase
		color: darken($color.white, 50%)
		@media(min-width: $screens.pv.bp)
			font-size 16px
			margin 0
		@media(min-width: $screens.tv.bp)
			font-size 18px
			letter-spacing 1px
		&::before, &::after
			content ""
			display inline-block
			vertical-align middle
			width 16px
			margin 0 8px
			height 1px
			background: darken($color.white, 75%)
			@media(min-width: $screens.pv.bp)
				width 24px
				margin 0 12px
			@media(min-width: $screens.tv.bp)
				margin 0 16px
				width 32px
	&__speach_text
		color: darken($color.white, 30%)
		font-size 16px
		line-height 1.5
		text-align left
		font($font.body.light)
		@media(min-width: $screens.tv.bp)
			font-size 18px
		h3
			color: darken($color.white, 10%)
			line-height 1.3
			margin 24px 0 12px
		p
			margin 12px 0
