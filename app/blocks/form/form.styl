.form
	&__item
		padding 12px
	&__cols
		@media(min-width: $screens.tv.bp)
			display flex
	&__col
		flex 1
	&__input
		width 100%
		font-size 18px
		font($font.body.light)
		background: $color.white
		border: 2px solid darken($color.white, 25%)
		padding 8px
		height 48px
		line-height: @height
		&.error
			color: $color.red
			border-color: @color
	&__input--text
		@extend .form__input
	&__input--textarea
		@extend .form__input
		height 256px
		resize vertical
		line-height 1.3
	&__input--submit
		transition all .3s ease-in
		min-width 100%
		@media(min-width: $screens.tv.bp)
			min-width 200px
		&.success, &.error
			color: $color.white
			min-width 100%
		&.success
			background-color: $color.green
			border-color: @background-color
		&.error
			background-color: $color.red
			border-color: @background-color
	&__foot
		padding 12px
		text-align center

