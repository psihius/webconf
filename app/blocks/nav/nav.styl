size = 32px
.nav
	margin 0 -4px
	&__item
		margin 0 8px
		display inline-block
		vertical-align middle
		text-align center
	&__item--icon
		@extend .nav__item
		height: size
		width: size
		padding 7px 8px
		line-height 1
		color: alpha($color.white, .5)
		fill: @color
		border: 1px solid @color
		border-radius 50%
		svg
			width 100%
			height 100%
		&:hover
			color: $color.white
			fill: @color
			border-color: @color
	&__item--hiddenicon
		@extend .nav__item, .nav__item--icon
		display none
		&.active
			display inline-block
			@media(min-width: $screens.th.bp)
				display none
	&__item--lang
		@extend .nav__item, .nav__item--icon
		text-align center
		padding 0
		line-height size
		font-size 13px
		text-transform uppercase
.nav--mainnav
	@extend .nav
	text-align right
	&__list
		display flex
		flex-direction column
		justify-content top
		height 100%
		line-height 36px
		fadeOut()
		position fixed 60px 0 0 0
		background: $color.black
		font-size 24px
		@media(min-width: $screens.th.bp)
			display flex
			flex-direction row
			justify-content center
			position static
			padding 0
			background none
			font-size 16px
			.sticky &
				fadeIn()
		&.active
			fadeIn()
	&__item
		padding 1em 12px
		color: lighten($color.main, 25%)
		@media(min-width: $screens.th.bp)
			padding 12px
		&.active
			color: $color.accent
	&__item--logo
		@extend .nav__item, .nav--mainnav__item
		margin-top -3px
		img
			width 200px
			margin 1em auto 1.5em
		@media(min-width: $screens.th.bp)
			display block
			img
				width 100px
				margin 0
