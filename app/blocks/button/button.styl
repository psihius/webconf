.button
	width 100%
	text-align center
	@media(min-width: $screens.pv.bp)
		width auto
	display inline-block
	html(lang="en") &
		text-transform capitalize
	&__icon
		display inline-block
		margin 0 12px 0 -6px
		height 16px
		width 16px
		vertical-align -10%
		svg
			width 100%
			height 100%
.button--ghost
	@extend .button
	background none
	border-width 2px
	border-style solid
	padding .75em 1.5em
	transition all .3s
	&:hover
		color: $color.white
		fill: @color
.button--ghost_main
	@extend .button, .button--ghost
	color: lighten($color.main,50%)
	border-color: @color
	fill: @color
	&:hover
		background-color: $color.main
		border-color: @background-color
.button--ghost_main_active
	@extend .button, .button--ghost, .button--ghost_main
	color: $color.main
	border-color: @color
	fill: @color

.button--ghost_accent
	@extend .button, .button--ghost
	color: $color.accent
	border-color: @color
	fill: @color
	&:hover
		background-color: $color.accent

.button--ghost_neutral
	@extend .button, .button--ghost
	color: lighten($color.black, 50%)
	border-color: lighten(@color, 25%)
	fill: @color
	&:hover
		background-color: lighten($color.black, 50%)
		border-color: @background-color

.button--lg
	font-size 24px
